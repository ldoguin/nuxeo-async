<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.async.layouts">
 
  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
      point="widgets">
      <widget name="feedback" type="template">
        <properties mode="any">
          <property name="template">/widgets/async_feedback_widget.xhtml</property>
        </properties>
      </widget>
  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="note">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>feedback</widget>
        </row>
        <row>
          <widget>note</widget>
        </row>
      </rows>
    </layout>
  </extension>

</component>
